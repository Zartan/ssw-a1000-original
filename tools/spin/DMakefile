CFLAGS= -f8d -O
OBJS=	im.o spin.o
LIBS=	lib:lcm881.lib lib:lc.lib lib:amiga.lib

all:	spin img

img:	img.c
	lc:lc -O -L img.c

spin:	$(OBJS)
	lc:blink from lib:c.o $(OBJS) to spin lib $(LIBS)

im.o:	im.c spin.h
	lc:lc $(CFLAGS) im.c

spin.o: spin.c spin.h
	lc:lc $(CFLAGS) spin.c
